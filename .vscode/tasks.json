{
    "version": "2.0.0",
    "tasks": 
    [
        {
            "label": "Build",
            "type": "shell",
            "command": "source ./scripts/build.sh",
            "windows": {
                "command": "powershell -ExecutionPolicy ByPass -File \\scripts\\build.ps1"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
        },
        {
            "label": "Deploy App",
            "type": "shell",
            "command": "source ./scripts/deploy-app.sh",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "Build",
            "problemMatcher": []
        }
    ]
}  